<p style="color: green"><%= notice %></p>

<h1>Topics</h1>

<div id="topics">
  <% @topics.each do |topic| %>
    <%= render topic %>
    <p>
      <%= link_to "View Posts for this Topic", topic_posts_path(topic) %>
    </p>
  <% end %>
</div>

<%= link_to "New topic", new_topic_path %>
<%= will_paginate(@topics) %>