<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <p>
      <strong>Title:</strong>
      <%= post.title %>
    </p>
    <p>
      <strong>Content:</strong>
      <%= post.content %>
    </p>
    <p>
      <%= @comments_count[post.id] || 0 %> comments
    </p>
    <p>
      <%= link_to "Show this post",topic_post_path(@topic,post)  %>
    </p>
  <% end %>
</div>

<%= link_to "New post", new_topic_post_path(@topic) %>
<%= will_paginate(@posts) %>