<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>
  <p>
    <% if post.image.attached? %>
      <%= image_tag(post.image, style: "width: 200px") %>
    <% else %>
      No image available
    <% end %>
  </p>
  <p>
    <strong>Content:</strong>
    <%= post.content %>
  </p>
  <p>
    <strong>Tags:</strong>
    <% post.tags.each do |tag| %>
      <%= link_to tag.name, tag %>
    <% end %>
  </p>
</div>
